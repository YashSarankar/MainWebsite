# Auto detect text files and perform LF normalization
* text=auto

# Maven wrapper
mvnw text eol=lf
mvnw.cmd text eol=crlf

# Java source files
*.java text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Make Maven wrapper executable
mvnw text eol=lf executable
